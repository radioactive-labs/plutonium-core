appraise "rails-7" do
  gem "rails", "~> 7.2"
  gem "sqlite3"
  gem "puma", ">= 5.0"
  gem "importmap-rails"
  gem "turbo-rails"
  gem "stimulus-rails"
  gem "propshaft"
  # Rodauth dependencies
  gem "rodauth-rails"
  gem "sequel-activerecord_connection"
  gem "tilt"
  gem "bcrypt"
  gem "rotp"
  gem "rqrcode"
  gem "tzinfo-data", platforms: %i[windows jruby]
end

